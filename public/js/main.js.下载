$(function () {

  // nav 的交互
  $(document).on('click', '#open',function(){
    $('#nav').addClass('show');
    // $(body).css('overflow-y', 'hidden');
  })

  $(document).on('click', '#close',function(){
    $('#nav').removeClass('show');
    // $(body).css('overflow-y', 'auto');
  })

  $(document).on('click', '#nav',function(){
    $('#nav').removeClass('show');
    // $(body).css('overflow-y', 'auto');
  })

})